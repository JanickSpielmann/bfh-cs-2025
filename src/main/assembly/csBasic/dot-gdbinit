set disassembly-flavor intel
tui new-layout bti1021asm regs 1 asm 1 status 0 cmd 1
tui new-layout bti1021c src 1 status 0 cmd 1

# use for assembler programming
define hook-run
layout bti1021asm
winheight regs 21
focus cmd
end

# use for C programming
#define hook-run
#layout bti1021c
#focus cmd
#end
